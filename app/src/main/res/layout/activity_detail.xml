<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dat255.refugeeevent.DetailActivity">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@color/colorAccent"
        android:id="@+id/coverImage"
        android:scaleType="centerCrop"
        android:layout_height="160dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:paddingBottom="10dp"
        android:weightSum="1"
        android:layout_below="@+id/coverImage">

        <TextView
            android:text="@string/title_example"
            android:layout_height="wrap_content"
            android:id="@+id/titleText"
            android:maxLength="100"
            tools:textColor="#212121"
            android:textSize="22sp"
            android:layout_width="306dp"
            android:textColor="#212121" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/placeImg"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_place_black_24dp"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="World Trade Center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/placeText"
                android:textColor="#212121"
                android:textSize="20sp"
                android:layout_toRightOf="@id/placeImg"
                android:layout_toEndOf="@id/placeImg"
                android:layout_centerInParent="true"  />

            <TextView
                android:text="1000"
                android:layout_height="wrap_content"
                android:id="@+id/attendingText"
                android:textColor="#212121"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_width="50dp" />

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/attendingImg"
                android:src="@drawable/ic_supervisor_account"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/attendingText"
                android:layout_toStartOf="@+id/attendingText" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/dateImg"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_calendar"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="23 Sep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateText"
                android:textColor="#212121"
                android:textSize="20sp"
                android:layout_toRightOf="@id/dateImg"
                android:layout_toEndOf="@id/dateImg"
                android:layout_centerInParent="true"  />

            <TextView
                android:text="18:00"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/timeText"
                android:textColor="#212121"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true" />

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/timeImg"
                android:src="@drawable/ic_access_time"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/timeText"
                android:layout_toStartOf="@+id/timeText" />
        </RelativeLayout>

        <TextView
            android:text="@string/description_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descText"
            android:textColor="#212121"
            android:textSize="16sp"
            android:layout_marginTop="15dp" />

    </LinearLayout>

    <ImageButton
        android:src="@drawable/ic_place_black_24dp"
        android:id="@+id/showMapsBtn"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="135dp" />

    <ImageButton
        android:background="#00000000"
        android:id="@+id/backBtn"
        android:layout_marginTop="25dp"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:scaleType="centerCrop"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />
</RelativeLayout>