<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dat255.refugeeevent.DetailActivity">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@color/colorAccent"
        android:id="@+id/coverImage"
        android:scaleType="centerCrop"
        android:layout_height="160dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:paddingBottom="10dp"
        android:weightSum="1"
        android:layout_below="@+id/coverImage">

        <TextView
            android:text="@string/title_example"
            android:layout_height="wrap_content"
            android:id="@+id/titleText"
            android:maxLength="100"
            tools:textColor="#212121"
            android:textSize="20sp"
            android:layout_width="306dp"
            android:textColor="#212121" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <TextView
                android:text="World Trade Center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/placeText"
                android:textColor="#212121"
                android:textSize="18sp" />

            <TextView
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/attendingText"
                android:textColor="#212121"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:text="11 Sep, 2001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateText"
                android:textColor="#212121"
                android:textSize="18sp" />

            <TextView
                android:text="08:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timeText"
                android:textColor="#212121"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <TextView
            android:text="@string/description_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="#212121"
            android:textSize="16sp"
            android:layout_marginTop="15dp" />

    </LinearLayout>

    <ImageButton
        app:srcCompat="@drawable/pinicon"
        android:id="@+id/showMapsBtn"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="135dp" />

    <ImageButton
        android:background="#00000000"
        android:id="@+id/backBtn"
        android:layout_marginTop="25dp"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:scaleType="centerCrop"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />
</RelativeLayout>