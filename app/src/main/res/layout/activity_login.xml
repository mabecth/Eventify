<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorClouds">


    <com.facebook.login.widget.LoginButton
        xmlns:facebook="http://schemas.android.com/apk/res-auto"
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        facebook:com_facebook_login_text="@string/facebook_login_button_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/login_continue_as_guest"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:id="@+id/imageView2"
        android:src="@drawable/logo_android"
        android:layout_above="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp"
        android:layout_marginBottom="30dp"/>

    <ImageView
        android:id="@+id/login_continue_as_guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:src="@drawable/ic_forward"
        android:text="@string/login_continue_without"
        android:onClick="continueAsGuest"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
